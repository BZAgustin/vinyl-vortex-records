extends layout 

block content 
  h1(class="text-center") #{genre.name} Albums

  div(class="container")
    .row
      each album in albumsByGenre
        .col-md-4
          .card.d-flex.flex-column.align-items-center.justify-content-center.p-3.pb-0
            img(class="card-img-top w-100", src=album.cover, alt="Card image cap")
            .card-body.d-flex.flex-column.align-items-center
              h2(class="card-title") #{album.title}
              h6(class="card-title") #{album.artist.stageName}
              a(href=album.url, class="btn btn-primary") View

      else
        h2(class="text-center") No associated albums so far!
