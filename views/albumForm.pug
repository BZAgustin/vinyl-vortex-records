extends layout

block content
  .container.d-flex.flex-column.align-items-center.justify-content-center.h-100
    form(method='POST' action='' class="d-flex flex-column align-items-center p-4 rounded shadow")
      h1(class="text-center mb-4") #{title}
      div.form-group.d-flex.flex-column
        label.mb-0(for='title') Title:
        input#name.form-control.mb-3(type='text', name='title', placeholder="Album title", value=(undefined===album ? '' : album.title), required='true')
        label.mb-0(for='artist') Artist:
        input#name.form-control.mb-3(type='text', name='artist', placeholder="Album artist", value=(undefined===album ? '' : album.artist), required='true')
        label.mb-0(for='releaseDate') Release Date:
        input#name.form-control.mb-3(type='date', name='releaseDate', value=(undefined===album ? '' : album.releaseDate))
        label.mb-0(for='cover') Cover URL:
        input#name.form-control.mb-3(type='text', enctype='text/plain', name='cover', placeholder="Paste album cover URL here", value=(undefined===album ? '' : album.cover))
        label.mb-0(for='genre') Genre(s):
        input#name.form-control.mb-3(type='text', name='genre', placeholder="Album genre(s) (comma separated)", value=(undefined===album ? '' : album.genre))
        label.mb-0(for='label') Label:
        input#name.form-control.mb-3(type='text', name='label', placeholder="Album record label", value=(undefined===album ? '' : album.label))
        button.btn.btn-primary.mt-3.align-self-center(type='submit') Submit

    if errors
      ul
      for error in errors
        li!= error.msg