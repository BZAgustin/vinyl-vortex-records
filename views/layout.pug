doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css', integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T', crossorigin='anonymous')
    script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js', integrity='sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1', crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js', integrity='sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM', crossorigin='anonymous')
 
  body
    div(class="container-fluid p-0 h-100")
      header(class="row d-flex flex-column flex-md-row align-items-center p-3")
        div(class="col-xl d-flex align-items-center justify-content-center mb-sm-3")
          img(class="col-0 ml-5" src="/images/logo.png")
          h1(class="col display-5 w-50") VINYL VORTEX  
        div(class="col-xl d-flex flex-wrap justify-content-center")
          a(href='/catalog', class="col-xl button text-center py-2 px-4 mb-3 mr-3") 
            p(class="h3") Catalog
          a(href='/catalog/store', class="col-xl button text-center py-2 px-4 mb-3 mr-3") 
            p(class="h3") Store
          a(href='/catalog/albums', class="col-xl button text-center py-2 px-4 mb-3 mr-3")
            p(class="h3") Albums
          a(href='/catalog/artists', class="col-xl button text-center py-2 px-4 mb-3 mr-3") 
            p(class="h3") Artists
          a(href='/catalog/genres', class="col-xl button text-center py-2 px-4 mb-3 mr-3") 
            p(class="h3") Genres


      main(class="row p-5")
        .col    
          block content

      section(class="row p-5 text-center")
        .col
          h1 Help Us Grow Our Collection!
          .row.d-flex.justify-content-center.p-5
            a(href='/catalog/album/create', class="col-12.col-lg-3 button py-2 px-4 mr-3 mb-3 mb-md-0") 
              p(class="h3") Add an Album
            a(href='/catalog/albuminstance/create', class="col-12.col-lg-3 button py-2 px-4 mr-3 mb-3 mb-md-0") 
              p(class="h3") Add a Copy
            a(href='/catalog/artist/create', class="col-12.col-lg-3 button py-2 px-4 mr-3 mb-3 mb-md-0") 
              p(class="h3") Add an Artist
            a(href='/catalog/genre/create', class="col-12.col-lg-3 button py-2 px-4 mr-3 mb-3 mb-md-0") 
              p(class="h3") Add a Genre

      section(class="row p-5 text-center")
        .col
          h1 See Anything Wrong? Update Our Records!
          .row.d-flex.justify-content-center.p-5
            a(href='/catalog/album/create', class="col-12.col-lg-4 button py-2 px-4 mr-3 mb-3 mb-md-0") 
              p(class="h3") Update

      footer(class="row p-3 text-center")
        h1(class="col") VV Inc.
    